<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Actividades.MainActivity"
    tools:showIn="@layout/app_bar_main"
    android:background="#dadada">


    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/imageView2"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/regalo_icon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=" Regalos: "
        android:id="@+id/textView2"
        android:layout_alignBottom="@+id/imageView2"
        android:layout_toEndOf="@+id/imageView2"
        android:textAlignment="center"
        android:gravity="center_vertical"
        android:textColor="#303F9F" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="40"
        android:id="@+id/CAMPO_REGALOS_INICIO"
        android:layout_alignBottom="@+id/textView2"
        android:layout_toEndOf="@+id/textView2"
        android:textColor="#303F9F"
        android:gravity="center_vertical"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/imageView3"
        android:src="@drawable/personas_icon"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/textView4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=" Personas: "
        android:id="@+id/textView4"
        android:gravity="center_vertical"
        android:textColor="#303F9F"
        android:layout_alignTop="@+id/imageView3"
        android:layout_toStartOf="@+id/CAMPO_PERSONAS_INICIO" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="40"
        android:id="@+id/CAMPO_PERSONAS_INICIO"
        android:gravity="center_vertical"
        android:layout_alignTop="@+id/textView4"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:textColor="#303F9F"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollViewInicio"
        android:layout_marginTop="50dp"
        android:fillViewport="false">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView8" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="200dp"
                android:text="Datos"
                android:background="@drawable/notificacion_diaria"
                android:id="@+id/CAMPO_NOTIFICACION_DIARIA" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView7" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="400dp"
                android:text="Datos"
                android:background="@drawable/notificaciones_mes"
                android:id="@+id/CAMPO_NOTIFICACIONES_MES" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
